package com.triffil;
class MatrixAdd
{
 public static void main(String arg[])
 {
  int a[][]= new int[3][3];
  int b[][] = new int[3][3];
  int c[][]= new int[3][3];
  int i,j,k=0;
  for(i=0;i<3;i++)
  {
   for(j=0;j<3;j++)
   {                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                   
    a[i][j]=k;
     k++;
    b[i][j]=k;
   }
  }
  System.out.println("1st mat. is");
  for(i=0;i<3;i++)
  {
   for(j=0;j<3;j++)
    {
     System.out.print("  " +a[i][j]);
    }
     System.out.println("\n");
   }
   System.out.println("2nd mat. is");
  for(i=0;i<3;i++)
  {
   for(j=0;j<3;j++)
    {
     System.out.print("  " +b[i][j]);
    }
     System.out.println("\n");
   }
  System.out.println("addtn is");
 for(i=0;i<3;i++)
  {
   for(j=0;j<3;j++)
   {                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                   
    c[i][j]=a[i][j]+b[i][j];
   }
  }
   for(i=0;i<3;i++)
  {
   for(j=0;j<3;j++)
    {
     System.out.print("  " +c[i][j]);
    }
     System.out.println("\n");
   }
 }
}
